<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="false"
        tools:targetApi="31">
        <activity
            android:name="net.studioblueplanet.superset.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
	        android:exported="true"
            android:screenOrientation="landscape" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.studioblueplanet.superset.MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="net.studioblueplanet.superset.SinglePlayerGameActivity"
            android:label="@string/title_activity_single_player_game"
            android:screenOrientation="landscape" >
        </activity>

        <activity
            android:name="net.studioblueplanet.superset.SinglePlayerGameFinishedActivity"
            android:label="@string/title_activity_single_player_game_finished"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="net.studioblueplanet.superset.CheckServerActivity"
            android:label="@string/title_activity_check_server"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="net.studioblueplanet.superset.RegisterUserActivity"
            android:label="@string/title_activity_register_user"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="net.studioblueplanet.superset.DeleteUserActivity"
            android:label="@string/title_activity_delete_user"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="net.studioblueplanet.superset.ServerHighScoreActivity"
            android:label="@string/title_activity_sever_high_score"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="net.studioblueplanet.superset.LocalHighScoreActivity"
            android:label="@string/title_activity_local_high_score"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="net.studioblueplanet.superset.SettingsNewActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>